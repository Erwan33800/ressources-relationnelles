<div class="card max-w-sm bg-white rounded-lg border border-gray-200 shadow-md dark:bg-gray-700 my-8 mr-4">
	{% if ressource.thumbnail %}
		<a>
			<img src="{{ vich_uploader_asset(ressource.thumbnail, 'imageFile') }}" alt="{{ ressource.thumbnail.imageName }}" class="rounded-t-lg">
		</a>
	{% endif %}
	<div class="p-5">
		<a href="#">
			<h5 class="mb-2 font-bold tracking-tight text-gray-900 dark:text-white">{{ ressource.title }}</h5>
		</a>
		<p class="mb-3 font-normal text-gray-700 dark:text-gray-400">{{ ressource.description }}</p>
		<a href="#" class="inline-flex items-center py-2 px-3 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-800">
			Lire la suite
		</a>
	</div>
</div>
